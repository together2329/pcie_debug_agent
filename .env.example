# PCIe Debug Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
EMBEDDING_API_KEY=your_embedding_api_key_here
LLM_API_KEY=your_llm_api_key_here

# Optional: Custom API Endpoints
# EMBEDDING_API_BASE_URL=https://api.example.com/embeddings
# LLM_API_BASE_URL=https://api.example.com/llm

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO
MAX_WORKERS=4
CACHE_SIZE_MB=1000

# Database Settings (for PostgreSQL)
POSTGRES_USER=pcie_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=pcie_debug

# Redis Settings (for caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# File Upload Settings
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.log,.txt,.cfg,.yaml,.v,.sv,.list

# Model Settings
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_CHUNK_SIZE=500
DEFAULT_CHUNK_OVERLAP=50